    <script>
// scripts.js

document.addEventListener('DOMContentLoaded', function() {
    // Funcionalidad para las miniaturas de la galería
    const miniaturas = document.querySelectorAll('.miniatura');
    const imagenPrincipal = document.getElementById('imagen-principal');

    miniaturas.forEach(miniatura => {
        miniatura.addEventListener('click', function() {
            // Actualizar la imagen principal
            imagenPrincipal.src = this.getAttribute('data-img');
            
            // Actualizar clase activa
            miniaturas.forEach(m => m.classList.remove('active'));
            this.classList.add('active');
        });
    });

    // Funcionalidad para las pestañas (tabs)
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabPanels = document.querySelectorAll('.tab-panel');

    tabButtons.forEach(button => {
        button.addEventListener('click', function() {
            const tabId = this.getAttribute('data-tab');
            
            // Actualizar botones activos
            tabButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
            
            // Actualizar paneles activos
            tabPanels.forEach(panel => panel.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
        });
    });

    // Selector de cantidad
    const btnDisminuir = document.getElementById('disminuir');
    const btnAumentar = document.getElementById('aumentar');
    const inputCantidad = document.getElementById('cantidad');

    btnDisminuir.addEventListener('click', function() {
        if (inputCantidad.value > 1) {
            inputCantidad.value = parseInt(inputCantidad.value) - 1;
        }
    });

    btnAumentar.addEventListener('click', function() {
        if (inputCantidad.value < 10) {
            inputCantidad.value = parseInt(inputCantidad.value) + 1;
        }
    });

    // Selector de color
    const opcionesColor = document.querySelectorAll('.opcion-color');
    
    opcionesColor.forEach(opcion => {
        opcion.addEventListener('click', function() {
            opcionesColor.forEach(o => o.classList.remove('active'));
            this.classList.add('active');
            
            // Aquí se podría actualizar la imagen principal según el color seleccionado
            const colorSeleccionado = this.getAttribute('data-color');
            console.log(`Color seleccionado: ${colorSeleccionado}`);
        });
    });

    // Botones de acción
    const btnComprar = document.querySelector('.btn-comprar');
    const btnCarrito = document.querySelector('.btn-carrito');

    btnComprar.addEventListener('click', function() {
        const cantidad = inputCantidad.value;
        const color = document.querySelector('.opcion-color.active').getAttribute('data-color');
        
        console.log(`Compra inmediata: ${cantidad} unidad(es), color ${color}`);
        // Aquí iría la lógica para el proceso de compra
    });

    btnCarrito.addEventListener('click', function() {
        const cantidad = inputCantidad.value;
        const color = document.querySelector('.opcion-color.active').getAttribute('data-color');
        
        console.log(`Añadido al carrito: ${cantidad} unidad(es), color ${color}`);
        // Aquí iría la lógica para agregar al carrito
    });

    // Funcionalidad para reseñas
    const btnUtilidad = document.querySelectorAll('.btn-util');
    
    btnUtilidad.forEach(btn => {
        btn.addEventListener('click', function() {
            // Lógica para marcar como útil/no útil
            console.log('Opinión registrada');
        });
    });
});
    </script>
